<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Takwira.Views.CreerMatch"
             Title="Create Match"
             
             >
    <ScrollView>
        <StackLayout Orientation="Vertical"
                 Padding="20"
                  HorizontalOptions="Center"
                     VerticalOptions="Center"
                     >

            <Entry  Placeholder="Number of player" x:Name="nb" Text=""/>
            <Label Text="date"/>
            <DatePicker
                x:Name="date"
           
           
            >
                 </DatePicker>
            <Label Text="Time" />
            
            <TimePicker x:Name="time"/>
            
            <Entry  Placeholder="Description" x:Name="desc" Text=""/>
            

            <Entry   IsVisible="False" Placeholder="Longitude" Text="" x:Name="lo"/>
            <Entry   IsVisible="False"  Placeholder="Latitude" Text="" x:Name="la"/>
            


            <Button Text="Create Match" 
               TextColor="White"
                    Clicked="Button_Clicked"
                    BackgroundColor="#013ADF"/>

        </StackLayout>
    </ScrollView>
</ContentPage>