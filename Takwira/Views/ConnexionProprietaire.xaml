<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Takwira.Views.ConnexionProprietaire">
    <ScrollView>
        <StackLayout Orientation="Vertical"
                  
              
                     
                 >
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand" WidthRequest="200">

                <Entry x:Name="email" Placeholder="Email" WidthRequest="200" />

                <Entry  x:Name="pass" Placeholder="Mot de passe" IsPassword="True" WidthRequest="200"/>
                <Button Text="Connecter" 
                        BackgroundColor="#013ADF"
                        TextColor="White"
                    Clicked="Button_ClickedAsync"
                    />
                <Button Text="Creer Un compte" 
                          
                    Clicked="Button_ClickedAsync2"
                    />

            </StackLayout>


            <!-- Command="{Binding PostCommand}"/> -->

        </StackLayout>
    </ScrollView>
</ContentPage> 