<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Takwira.Views"
             
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="Takwira.Views.MainPage">

    <maps:Map/>
    <ScrollView>
        <StackLayout Orientation="Vertical">
            <Label Text="Welcome to Takwira" FontSize="28" Margin="20"/>
                 
            <StackLayout HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand" WidthRequest="200">


                <Image Source="Images/Football.png" />

                <Button Text="Proprietaire de terrain" 
                    Clicked="Button_ClickedAsync"
                        BackgroundColor="#013ADF"
                        TextColor="White"
                         WidthRequest="200"
                    />
                <Button Text="Joueur de Foot" 
                        BackgroundColor="#013ADF"
                        TextColor="White"
                    Clicked="Button_ClickedAsync2"
                         WidthRequest="200"
                    />

            </StackLayout>


         

        </StackLayout>
    </ScrollView>
</ContentPage> 